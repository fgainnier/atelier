<div id="projects" class="transitions-enabled">
  <% @projects.each do |project| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(project.image.url(:medium)), project %>
      <div class="panel-body">
        <%= project.description %></br>
        <strong><%= project.user.email if project.user %></strong>
        <% if project.user == current_user %>
          <%= link_to edit_project_path(project) do %>
              <span class="glyphicon glyphicon-edit"></span>
              Edit
            <% end %>
            <%= link_to project, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @projects, renderer: BootstrapPagination::Rails %>
</div>
  
